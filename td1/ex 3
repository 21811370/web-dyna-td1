 <!DOCTYPE html>
<html>
    <head>
    <meta charset="UTF-8">
    <title> Exercice php </title>
    </head>
<body>
   
       
    
    <form method="POST">
        <label for="message">Messsage : </label>
        <input type="string" value="" name="message" id="message">
        <label for="size">Taille : </label>
        <input type="number" value="" name="size" id="message">
        <label for="color">Couleurs : </label>
        <input type="color" value="" name="color" id="color">
        <input type="submit" value="Valider" name="submit">
     
    </form>
    <?php
   
    
    
        if (!isset($_POST['message'])) {
            echo "donne un message";
            }
        else {
            $message=$_POST['message'];
            $color=$_POST['color']??'red';
            $size=$_POST['size']??75;
        }
     
    echo "<div style='font-size: {$size}px; color: {$color}; message: ($message)'>$message</div>";
    
    ?>

</body>
</html> 
